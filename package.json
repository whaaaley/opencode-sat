{
  "name": "opencode-irf",
  "version": "0.0.5",
  "description": "OpenCode plugin that converts unstructured instructions into structured rules using speech act theory and deontic logic.",
  "keywords": [
    "opencode",
    "opencode-plugin",
    "plugin",
    "instructions",
    "rules",
    "formatting",
    "speech-act-theory",
    "deontic-logic"
  ],
  "homepage": "https://github.com/whaaaley/irf#readme",
  "bugs": {
    "url": "https://github.com/whaaaley/irf/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whaaaley/irf.git"
  },
  "license": "MIT",
  "author": "Dustin Whalen",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/irf.js",
      "types": "./dist/irf.d.ts"
    }
  },
  "main": "./dist/irf.js",
  "types": "./dist/irf.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && bun build irf.ts --outfile dist/irf.js --target node --external @opencode-ai/plugin --external zod",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.1.49"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.13.7"
  }
}
